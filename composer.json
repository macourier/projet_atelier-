{
    "name": "projetatelier/facturation-velo",
    "description": "PROJET_ATELIER – Facturation Vélo (Slim 4, Twig, PDO, Dotenv, Dompdf, Symfony Mailer, PhpSpreadsheet)",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.5",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "dompdf/dompdf": "^2.2",
        "symfony/mailer": "^6.0",
        "symfony/http-client": "^6.0",
        "phpoffice/phpspreadsheet": "^1.29"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "platform": {
            "php": "8.2.0"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public"
    }
}
