        }
        add('name', f.name || '');
        add('address', f.address || '');
        add('email', f.email || '');
        add('phone', f.phone || '');
        document.body.appendChild(form);
        form.submit();
        return false;
      }
      // Rien saisi → bascule sur l’édition client (vierge)
      window.location.href = '/clients/0/edit?return=' + encodeURIComponent('/catalogue');
      return false;
