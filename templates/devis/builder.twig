    // Gestion des lignes personnalisées (tuile "Prestation")
    function addCustomLine(kind){
      try{
        const form = document.querySelector('form[action="/devis/pdf/direct"]') || document.querySelector('form');
        if(!form) return false;
        const labEl = document.getElementById(kind==='prest' ? 'c_prest_label' : 'c_piece_label');
        const priceEl = document.getElementById(kind==='prest' ? 'c_prest_price' : 'c_piece_price');
        const label = (labEl?.value || '').trim();
        let priceRaw = (priceEl?.value || '').trim();
        priceRaw = priceRaw.replace(',', '.');
        const price = parseFloat(priceRaw);
        if(label === '' || isNaN(price) || price < 0){
          alert('Veuillez saisir un nom et un prix valides.');
          return false;
        }
        const hidWrap = document.getElementById('custom-lines-container');
        const key = 'c_' + kind + '_' + Date.now() + '_' + Math.random().toString(16).slice(2);
        const nameLabel = (kind==='prest') ? 'custom_prest_label[]' : 'custom_piece_label[]';
        const namePrice = (kind==='prest') ? 'custom_prest_price[]' : 'custom_piece_price[]';
        const i1 = document.createElement('input'); i1.type='hidden'; i1.name=nameLabel; i1.value=label; i1.setAttribute('data-key', key);
        const i2 = document.createElement('input'); i2.type='hidden'; i2.name=namePrice; i2.value=String(price); i2.setAttribute('data-key', key);
        (hidWrap || form).appendChild(i1);
        (hidWrap || form).appendChild(i2);
        // visible list
        const list = document.getElementById('custom-lines-list');
        if (list) {
          const li = document.createElement('li');
          li.setAttribute('data-key', key);
          li.style.display='flex';
          li.style.alignItems='center';
          li.style.justifyContent='space-between';
          li.style.gap='8px';
          li.style.padding='6px 0';
          const left = document.createElement('div');
          left.textContent = label + ' — ' + Number(price).toFixed(2) + ' €';
          const btn = document.createElement('button');
          btn.type='button';
          btn.className='btn btn-ghost btn-ghost-sm';
          btn.textContent='Supprimer';
          btn.addEventListener('click', function(){ removeCustomLine(key); });
          li.appendChild(left);
          li.appendChild(btn);
          list.appendChild(li);
        }
        if(labEl) labEl.value = '';
        if(priceEl) priceEl.value = '';
        // recalculer le total
        try { const e = new Event('input'); document.body.dispatchEvent(e); } catch(_e){}
        return false;
      }catch(_e){ return false; }
    }
    function removeCustomLine(key){
      try{
        document.querySelectorAll('input[data-key="'+key+'"]').forEach(el=>el.remove());
        const li = document.querySelector('#custom-lines-list li[data-key="'+key+'"]');
        if (li) li.remove();
        try { const e = new Event('input'); document.body.dispatchEvent(e); } catch(_e){}
        return false;
      }catch(_e){ return false; }
    }
