<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{% block title %}Atelier Vélo — Facturation{% endblock %}</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">
  <!-- FontAwesome (icônes) -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <!-- Alpine.js (interactivité tactile légère) -->
  <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

  {% block head %}{% endblock %}
</head>
<body>
  <div class="container">
    <header>
      <a href="/" class="brand-logo" aria-label="L'Atelier Vélo">
        <span class="brand-label">
          <span class="brand-line1">l’atelier</span>
        </span>
        <span class="brand-group-velo">
          <span class="brand-line2">VELO</span>
        </span>
        <span class="logo-subtitle">BikeOffice</span>
        <span class="logo-divider"></span>
      </a>
      <nav class="flex header-nav">
        <a href="/catalogue" class="nav-link">Catalogue</a>
        <a href="/tickets/queue" class="nav-link">File d'attente</a>
        <a href="#" onclick="return adminAccess()" title="Accès administrateur" class="nav-link">Administrateur</a>
        <a href="/logout" class="nav-link nav-link-logout">Déconnexion</a>
        <form action="/search" method="get" class="flex" style="gap:6px; margin-left:12px; align-items:center;">
          <input type="text" name="q" placeholder="Recherche…" style="min-width:220px; height:32px; padding:6px 10px; border:1px solid #ddd; border-radius:8px;">
          <button class="search-btn" type="submit" aria-label="Rechercher"><img src="/img/search.png" alt="" aria-hidden="true" /><span class="sr-only">Rechercher</span></button>
        </form>
      </nav>
    </header>

    <main>
      {% block content %}{% endblock %}
    </main>

    <footer>
      © {{ "now"|date("Y") }} L’Atelier Vélo — v1.0
    </footer>
  </div>
  <script>
    function adminAccess() {
      var pwd = prompt('Mot de passe administrateur ?');
      if (pwd === 'admin') {
        window.location.href = '/admin';
      } else if (pwd !== null) {
        alert('Mot de passe incorrect.');
      }
      return false;
    }

    // Mise en évidence du lien actif (SaaS-like) côté client
    document.addEventListener('DOMContentLoaded', function(){
      try {
        var nav = document.querySelector('nav.header-nav');
        if (!nav) return;
        var path = (location.pathname || '').toLowerCase();

        nav.querySelectorAll('a.nav-link').forEach(function(a){
          var label = (a.textContent || '').trim().toLowerCase();
          var href  = (a.getAttribute('href') || '').toLowerCase();

          // Règles simples par sections
          if (path.indexOf('/catalogue') === 0 && label.indexOf('catalogue') >= 0) a.classList.add('active');
          if (path.indexOf('/tickets') === 0 && (label.indexOf("file d'attente") >= 0 || label.indexOf('file') >= 0)) a.classList.add('active');
          if (path.indexOf('/admin') === 0 && (label.indexOf('administrateur') >= 0 || href === '/admin')) a.classList.add('active');
        });
      } catch (_e) {}
    });
  </script>
</body>
</html>
