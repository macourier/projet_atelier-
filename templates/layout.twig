<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{% block title %}Atelier Vélo — Facturation{% endblock %}</title>
  <link rel="stylesheet" href="/css/style.css">
  <!-- FontAwesome (icônes) -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <!-- Alpine.js (interactivité tactile légère) -->
  <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

  {% block head %}{% endblock %}
</head>
<body>
  <div class="container">
    <header>
      <div class="brand">{{- (env.COMPANY_NAME ?? "L' Atelier Vélo") -}}</div>
      <nav class="flex" style="gap:8px; align-items:center;">
        <a href="/catalogue">Catalogue</a>
        <a href="#" onclick="return adminAccess()" title="Accès administrateur">Administrateur</a>
        <a href="/logout">Déconnexion</a>
        <form action="/search" method="get" class="flex" style="gap:6px; margin-left:12px;">
          <input type="text" name="q" placeholder="Recherche…" style="min-width:220px; height:32px; padding:6px 10px; border:1px solid #ddd; border-radius:8px;">
          <button class="btn btn-secondary" type="submit" style="min-height:32px; padding:6px 10px;">OK</button>
        </form>
      </nav>
    </header>

    <main>
      {% block content %}{% endblock %}
    </main>

    <footer>
      © {{ "now"|date("Y") }} {{ env.COMPANY_NAME ?? "L' Atelier Vélo" }}
    </footer>
  </div>
  <script>
    function adminAccess() {
      var pwd = prompt('Mot de passe administrateur ?');
      if (pwd === 'admin') {
        window.location.href = '/admin';
      } else if (pwd !== null) {
        alert('Mot de passe incorrect.');
      }
      return false;
    }
  </script>
</body>
</html>
