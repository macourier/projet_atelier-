<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{% block title %}Atelier Vélo — Facturation{% endblock %}</title>
<link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">
  <!-- FontAwesome (icônes) -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" referrerpolicy="no-referrer" />
  <!-- Alpine.js (interactivité tactile légère) -->
<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.15.2/dist/cdn.min.js"
          onerror="(function(){var s=document.createElement('script');s.src='/js/alpine-3.15.2.min.js';s.defer=true;document.head.appendChild(s);}())"></script>
  <script>
    // Fallback runtime si Alpine n'est pas chargé par le CDN (Tracking/CORS)
    window.addEventListener('DOMContentLoaded', function(){
      try {
if (!window.Alpine) {
          var s = document.createElement('script');
          s.src = '/js/alpine-3.15.2.min.js';
          s.defer = true;
          document.head.appendChild(s);
        }
      } catch(_) {}
    });
  </script>

  {% block head %}{% endblock %}
</head>
<body>
  <div class="container">
    <header>
<a href="/" class="brand-logo" aria-label="L'Atelier Vélo">
        <span class="brand-label">
          <span class="brand-line1">l’atelier</span>
        </span>
        <span class="brand-group-velo">
          <span class="brand-line2">VELO</span>
        </span>
        <span class="logo-subtitle">BikeOffice</span>
        <span class="logo-divider"></span>
      </a>
      <nav class="flex header-nav">
<a href="/catalogue" class="nav-link">Catalogue</a>
<a href="/tickets/queue" class="nav-link">File d'attente</a>
<a href="#" onclick="return adminAccess()" title="Accès administrateur" class="nav-link">Administrateur</a>
<a href="/logout" class="nav-link nav-link-logout">Déconnexion</a>
<form action="/search" method="get" class="flex" style="gap:6px; margin-left:12px; align-items:center;">
  <input type="text" name="q" placeholder="Recherche…" style="min-width:220px; height:32px; padding:6px 10px; border:1px solid #ddd; border-radius:8px;">
  <button class="search-btn" type="submit" aria-label="Rechercher"><img src="/img/search.png" alt="" aria-hidden="true" /><span class="sr-only">Rechercher</span></button>
</form>
      </nav>
    </header>

    <main>
      {% block content %}{% endblock %}
    </main>

    <footer>
      © {{ "now"|date("Y") }} L’Atelier Vélo — v1.0
    </footer>
  </div>
  <script>
    function adminAccess() {
      var pwd = prompt('Mot de passe administrateur ?');
      if (pwd === 'admin') {
        window.location.href = '/admin';
      } else if (pwd !== null) {
        alert('Mot de passe incorrect.');
      }
      return false;
    }

    // Mise en évidence du lien actif + barre glissante (SaaS-like) côté client
    document.addEventListener('DOMContentLoaded', function(){
      try {
        var nav = document.querySelector('nav.header-nav');
        if (!nav) return;
        var path = (location.pathname || '').toLowerCase();

        var links = nav.querySelectorAll('a.nav-link');

        // Appliquer la classe active en fonction de l'URL
        links.forEach(function(a){
          var label = (a.textContent || '').trim().toLowerCase();
          var href  = (a.getAttribute('href') || '').toLowerCase();

          // Règles simples par sections
          if (path.indexOf('/catalogue') === 0 && label.indexOf('catalogue') >= 0) a.classList.add('active');
          if (path.indexOf('/tickets') === 0 && (label.indexOf("file d'attente") >= 0 || label.indexOf('file') >= 0)) a.classList.add('active');
          if (path.indexOf('/admin') === 0 && (label.indexOf('administrateur') >= 0 || href === '/admin')) a.classList.add('active');
        });

        // Barre glissante
        var bar = nav.querySelector('.nav-slide-bar');
        if (!bar) {
          bar = document.createElement('span');
          bar.className = 'nav-slide-bar';
          bar.setAttribute('aria-hidden', 'true');
          nav.appendChild(bar);
        }

        function positionBar(link) {
          if (!link || !bar) return;
          var navRect = nav.getBoundingClientRect();
          var rect = link.getBoundingClientRect();
          var linkWidth = rect.width || 0;
          if (!linkWidth) return;
          var barWidth = linkWidth * 0.20; // 20% de la largeur du lien
          var center = rect.left + linkWidth / 2;
          bar.style.width = barWidth + 'px';
          bar.style.left = (center - barWidth / 2 - navRect.left) + 'px';
        }

        // Positionner la barre sous le lien actif initial (hors Déconnexion)
        var active = nav.querySelector('a.nav-link.active:not(.nav-link-logout)');
        if (active) {
          positionBar(active);
        }
      } catch (_e) {}
    });
  </script>
</body>
</html>
