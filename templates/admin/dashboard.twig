{% extends 'layout.twig' %}

{% block title %}Admin — Dashboard utilisateur{% endblock %}

{% block content %}
  <style>
    /* Barre admin horizontale (persistante) */
    .admin-navbar {
      position: sticky;
      top: 0;
      z-index: 5;
      background: #fff;
      border-bottom: 1px solid #e5e7eb;
      padding: 10px 0;
      margin: -12px 0 16px;
    }
    .admin-tiles {
      display: flex;
      gap: 12px;
      align-items: stretch;
      overflow-x: auto;
      padding-bottom: 4px;
    }
    .admin-tile {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 10px 14px;
      border-radius: 10px;
      border: 1px solid #e5e7eb;
      background: #f9fafb;
      color: #111827;
      text-decoration: none;
      white-space: nowrap;
      transition: transform .06s ease, background .12s ease, box-shadow .12s ease;
    }
    .admin-tile:hover {
      background: #f3f4f6;
      transform: translateY(-1px);
      box-shadow: 0 1px 6px rgba(0,0,0,.05);
    }
    .admin-tile .icon {
      width: 20px;
      text-align: center;
      color: #2563eb;
    }
    .muted {
      color: #6b7280;
      font-size: .95rem;
    }
  </style>

  <h2 class="page-title-inside">Dashboard utilisateur</h2>

  <div class="admin-navbar">
    <div class="admin-tiles">
      <!-- Première tuile requise: Editer catalogue -->
      <a class="admin-tile" href="/admin/prestations" title="Éditer catalogue">
        <span class="icon"><i class="fas fa-cog"></i></span>
        <span>Éditer catalogue</span>
      </a>
    </div>
  </div>

{% endblock %}
