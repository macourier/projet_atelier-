# Environment example for PROJET_ATELIER – Facturation Vélo
APP_ENV=development
APP_DEBUG=true
SECRET_KEY=change_me

# Database (sqlite for dev)
DB_DRIVER=sqlite
DB_PATH=./data/app.db

# Mailer (symfony mailer DSN) e.g. smtp://user:pass@smtp.example.com:587
MAILER_DSN=

# Company information (used in PDFs / emails)
COMPANY_NAME=Atelier Vélo
COMPANY_ADDRESS=123 Rue du Cycle, 75000 Paris
COMPANY_EMAIL=contact@atelier-velo.example
COMPANY_PHONE=+33 1 23 45 67 89

# Tax and numbering defaults
TVA_DEFAULT=20
NUMSEQ_FACTURE_PREFIX=2025-

# Other
CACHE_DIR=./cache
