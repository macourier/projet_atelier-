# Environment example for PROJET_ATELIER – Facturation Vélo
APP_ENV=development
APP_DEBUG=true
SECRET_KEY=change_me

# Database configuration
# For SQLite (default for development):
DB_DRIVER=sqlite
DB_PATH=./data/app.db

# For PostgreSQL:
# DB_DRIVER=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_NAME=projet_atelier
# DB_USER=postgres
# DB_PASSWORD=your_password

# For MySQL (not yet fully tested):
# DB_DRIVER=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_NAME=projet_atelier
# DB_USER=root
# DB_PASSWORD=

# Mailer (symfony mailer DSN) e.g. smtp://user:pass@smtp.example.com:587
MAILER_DSN=

# Company information (used in PDFs / emails)
COMPANY_NAME="Atelier Vélo"
COMPANY_ADDRESS="10 avenue Willy Brandt, 59000 Lille"
COMPANY_EMAIL=
COMPANY_PHONE="03 20 78 80 63"

# Tax and numbering defaults
TVA_DEFAULT=20
NUMSEQ_FACTURE_PREFIX=2025-

# Other
CACHE_DIR=./cache